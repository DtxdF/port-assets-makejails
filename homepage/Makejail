ARG version
ARG output

OPTION start
OPTION overwrite=force
OPTION alias
OPTION ip4_inherit
OPTION ip6_inherit
OPTION ephemeral

PKG git-tiny npm-node22

COPY files
CMD export COREPACK_ENABLE_DOWNLOAD_PROMPT=0 && \
    git clone https://github.com/gethomepage/homepage.git && \
    cd homepage && \
    git checkout tags/${version} && \
    corepack enable && \
    corepack prepare pnpm@10.8.1 --activate && \
    pnpm install --frozen-lockfile --prefer-offline && \
    env NEXT_TELEMETRY_DISABLED=1 \
        NEXT_PUBLIC_VERSION=${version} \
        NEXT_PUBLIC_REVISION=`git rev-parse HEAD` \
            pnpm run build && \
    mkdir -p /homepage-files && \
    cp -a public /homepage-files && \
    cp -a .next/standalone/ /homepage-files && \
    cp -a .next/static/ /homepage-files/.next/static && \
    rm -rf /homepage-files/config && \
    tar --gzip -C / -cf /homepage-${version}.tar.gz homepage-files
CMD --local-jaildir cp -a homepage-${version}.tar.gz "${output}"
