ARG version
ARG output

OPTION start
OPTION overwrite=force
OPTION alias
OPTION ip4_inherit
OPTION ip6_inherit
OPTION ephemeral

COPY usr

PKG git-tiny go125

CMD git clone https://github.com/navidrome/navidrome.git && \
    cd navidrome && \
    git checkout tags/${version} && \
    go125 mod vendor && \
    cp -a vendor /navidrome-vendor && \
    tar --gzip -C / -cf /navidrome-${version}.vendor.tar.gz navidrome-vendor
CMD --local-jaildir cp -a navidrome-${version}.vendor.tar.gz "${output}"
